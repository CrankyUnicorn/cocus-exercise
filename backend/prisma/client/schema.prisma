datasource db {
  provider = "sqlite"
  // url is no longer allowed in schema files for Prisma 7 â€” move to prisma.config.ts
}

generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

model FeatureFlag {
  id                String   @id @default(uuid())
  key               String   @unique
  description       String
  enabled           Boolean  @default(false)
  rolloutPercentage Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
